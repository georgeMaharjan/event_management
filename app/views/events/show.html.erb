<p style="color: green"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @event %>
  </tbody>
</table>

<% if user_signed_in? %>
    <%= button_to "Back to events", events_path, method: :get %>
  <div>
    <% if can?(:create, Event) %>
      <%= button_to "Edit this event", edit_event_path(@event), method: :get %>
      <%= button_to "Destroy this event", @event, method: :delete %>
    <% end %>
  </div>
<% end %>
